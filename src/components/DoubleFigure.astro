---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  src1: string;
  alt1?: string;
  width1: number;
  height1: number;
  metadata1: ImageMetadata;
  src2: string;
  alt2?: string;
  width2: number;
  height2: number;
  metadata2: ImageMetadata;
};

const defaultAlt = "Figure"; // Define default alt value
const { alt1 = defaultAlt, alt2 = defaultAlt, ...rest } = Astro.props; // Destructure props with default value
---

<div style="display: flex; flex-direction: column; align-items: center;">
  <div style="display: flex; justify-content: space-between; gap: 1rem; width: 100%;">
    <figure style="flex: 1; margin: 0; display: flex; flex-direction: column; align-items: center;">
      <Image src={rest.src1} alt={alt1} width={rest.width1} height={rest.height1} metadata={rest.metadata1} class="rounded-lg" style="padding: 0;" />
    </figure>
    <figure style="flex: 1; margin: 0; display: flex; flex-direction: column; align-items: center;">
      <Image src={rest.src2} alt={alt2} width={rest.width2} height={rest.height2} metadata={rest.metadata2} class="rounded-lg" style="padding: 0;" />
    </figure>
  </div>
  <figcaption style="margin-top: 1rem; text-align: justify; width: 100%;">
    <slot />
  </figcaption>
</div>
