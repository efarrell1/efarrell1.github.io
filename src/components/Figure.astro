---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  src: string;
  alt?: string;
  width: number;
  height: number;
  metadata: ImageMetadata;
};

const defaultAlt = "Figure"; // Define default alt value
const { alt = defaultAlt, ...rest } = Astro.props; // Destructure props with default value

---

<figure style="width: 100%; margin: 0 auto; display: flex; flex-direction: column; align-items: center;">
  <Image {...rest} alt={alt} class="rounded-lg" style="padding: 0;"/> <!-- Use the destructured alt -->
  <figcaption>
    <slot />
  </figcaption>
</figure>